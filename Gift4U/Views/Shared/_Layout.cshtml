<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="SHORTCUT ICON" href="~/img/logo2.ico" />
    <title>@ViewData["Title"] | Gift4U</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <!-- Slick -->
    <link rel="stylesheet" href="~/css/slick.css" />
    <link rel="stylesheet" href="~/css/slick-theme.css" />
    <!-- artModal -->
    <link rel="stylesheet" href="~/css/artModal.css">
    <link rel="stylesheet" href="~/css/font.css">
    <link rel="stylesheet" href="~/css/common.css">
</head>
<body>
    <!-- .logo -->
    <div class="logo container">
        <a href="index.jsp">
            <img src="~/img/logo2.jpg" width="120px" height="120px">
        </a>
    </div>
    <!-- /.logo -->
    <!-- .navbar -->
    <nav class="navbar navbar-default">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Menu</span>
                    <span class="icon-bar">M</span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @{
                        if ((string)ViewData["Title"] == "Home")
                        {
                            <li class="active"><a>Home</a></li>
                            <li><a href="~/Products">Products</a></li>
                        }
                        else if ((string)ViewData["Title"] == "Products")
                        {
                            <li><a href="~/Home">Home</a></li>
                            <li class="active"><a>Products</a></li>
                        }
                        else
                        {
                            <li><a href="~/Home">Home</a></li>
                            <li><a href="~/Products">Products</a></li>
                        }
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        string username = (string)ViewData["username"];
                        string userid = (string)ViewData["userid"];
                        if (username != null && userid != null)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@username<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="~/Orders">Orders</a></li>
                                    <li><a href="~/Cart">Cart</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="~/Account/Login">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li><a href="~/Account/Login">Login</a></li>
                        }
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- /.navbar -->
    <!-- JQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Slick -->
    <script src="~/js/slick.js"></script>
    <!-- artModal -->
    <script src="~/js/artModal.js"></script>
    <!-- magicZoom -->
    <script src="~/js/magicZoom.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/js/toast.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderBody()
    <footer>
        <div class="copyright container">
            <p>© 2018 by Gift4U</p>
        </div>
    </footer>
</body>
</html>
