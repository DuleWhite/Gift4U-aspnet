@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" type="text/css" href="~/css/account.css">
<!-- .signupin -->
<div class="signupin">
    <div class="panel">
        <h2>Login</h2>
        <div class="content">
            <div class="left">
                <img src="/img/logo4.png">
            </div>
            <div class="right loginpage">
                <label>Phone number</label>
                <div>
                    <input id="phone" type="number" maxlength=11 minlength=11 name="phoneNumber">
                    <button id="getCode2">Send</button>
                </div>
                <label>Verification code</label>
                <div>
                    <input id="code" type="number" maxlength=6 minlength=6 name="verificationCode">
                    <button id="login">Login</button>
                </div>
                <span class="hint">hint:</span>
                <span class="have-account">
                    Don't have account?  <a href="/Account/Signup">Sign up</a>
                </span>
            </div>
        </div>
    </div>
</div>
<!-- / .signupin -->
<script type="text/javascript" src="~/js/account.js?"></script>
